<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#5efffcda">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI &amp; CALORIE"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#ff070707"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select one"
        android:id="@+id/textView3"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/radioGroup2"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Little to no exercise"
            android:id="@+id/radioButton3"
            android:textSize="18dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light to exercise  (1-3 days per week)"
            android:id="@+id/radioButton4"
            android:textSize="18dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate exercise(3-5 days per week)"
            android:id="@+id/radioButton5"
            android:textSize="18dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heavy exercise(6-7 days per week)"
            android:id="@+id/radioButton6"
            android:checked="false"
            android:textSize="18dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very heavy exercise(twice per day,extra heavy work out )"
            android:id="@+id/radioButton7"
            android:textSize="18dp"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button3"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2" />
</RelativeLayout>
